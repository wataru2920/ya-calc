<h1>新規ユーザー登録</h1>

<%= form_tag("/users/create") do %>
  <div class="user-contents">
    <% @user.errors.full_messages.each do |message| %>
      <div class="form-error">
        <%= message %>
      </div>
    <% end %>
    <p class="la">ユーザー名</p>
    <input class="fo-mu" name="username" value="<%= @user.username %>">
    <p class="la">メールアドレス</p>
    <input class="fo-mu" name="email" type="email" value="<%= @user.email %>">
    <p class="la">パスワード</p>
    <input class="fo-mu" name="password" type="password" value="<%= @user.password %>">
  </div>
  <input class="btn" type="submit" value="新規登録">
<% end %>
